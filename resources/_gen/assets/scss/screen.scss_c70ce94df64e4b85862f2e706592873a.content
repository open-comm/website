footer nav {
  display: flex;
  margin: 2rem;
  border-top: 1px solid #79cbc2; }

footer nav div {
  margin-right: 2rem; }

footer ul {
  list-style: none;
  padding: 0; }

footer .copyright {
  max-width: 350px; }
